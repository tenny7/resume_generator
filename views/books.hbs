{{> header }}
<div class="container">
    <h1 class="text-center">Books Directory</h1>
    <div class="row">
        <div class="col-4 offset-4">
            <form action="/book/create" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" value="" placeholder="Enter title of book" required>
                </div>
                <br>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" value="" placeholder="Enter description" required>
                </div>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{> footer }}